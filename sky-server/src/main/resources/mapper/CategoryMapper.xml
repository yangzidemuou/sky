<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.CategoryMapper">

    <insert id="insert">
        insert into category(type,name,sort,status,create_user,create_time)
        values(#{type},#{name},#{sort},'0',#{createUser},#{createTime});
    </insert>


    <update id="update" parameterType="com.sky.entity.Category">
        update category
        <set>
            <if test="type !=null">type=#{type},</if>
            <if test="name !=null">name=#{name},</if>
            <if test="sort !=null">sort=#{sort},</if>
            <if test="status !=null">status=#{status},</if>
            <if test="createTime !=null">create_time=#{createTime},</if>
            <if test="updateTime !=null">update_time=#{updateTime},</if>
            <if test="createUser !=null">create_user=#{createUser},</if>
            <if test="updateUser !=null">update_user=#{updateUser},</if>
        </set>
        where id=#{id}
    </update>


    <delete id="delete" parameterType="com.sky.entity.Category">
        delete from category
        <where>
            <if test="id !=null">id=#{id}</if>
        </where>

    </delete>

    <select id="pageQuery" resultType="com.sky.entity.Category">
        select * from category
        <where>
            <if test="type !=null">
                and type=#{type}
            </if>
            <if test="name !=null">
                and name like concat('%',#{name},'%')
            </if>
        </where>
        order by sort desc
    </select>
</mapper>